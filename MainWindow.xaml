<Window x:Class="CanTestSqlite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CanTestSqlite"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
            <Button Content="START" Width="120" Height="45" FontSize="16" Margin="5"
                    Command="{Binding StartCommand}"/>
            <Button Content="STOP" Width="120" Height="45" FontSize="16" Margin="5"
                    Command="{Binding StopCommand}"/>
            <TextBlock Text="{Binding Status}" FontSize="18" FontWeight="Bold" 
                       VerticalAlignment="Center" Margin="30,0"/>
        </StackPanel>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Messages}" 
                  AutoGenerateColumns="False" CanUserAddRows="False" 
                  CanUserDeleteRows="False" GridLinesVisibility="All">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Aktiv" Width="60"
                                        Binding="{Binding Enabled, UpdateSourceTrigger=PropertyChanged}"/>
                <DataGridTextColumn Header="CAN-ID (hex)" Width="120"
                                    Binding="{Binding CanIdHex, UpdateSourceTrigger=PropertyChanged}"/>
                <DataGridCheckBoxColumn Header="29-bit" Width="70"
                                        Binding="{Binding IsExtended}"/>
                <DataGridTextColumn Header="Daten (hex)" Width="*" 
                                    Binding="{Binding DataHex, UpdateSourceTrigger=PropertyChanged}"/>
                <DataGridTextColumn Header="Zyklus [ms]" Width="100"
                                    Binding="{Binding CycleTimeMs, UpdateSourceTrigger=PropertyChanged}"/>
            </DataGrid.Columns>
        </DataGrid>

        <StatusBar Grid.Row="2" Background="#FFF0F0F0">
            <TextBlock Text="{Binding Status}" FontSize="14"/>
        </StatusBar>
    </Grid>
</Window>
